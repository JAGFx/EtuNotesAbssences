<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		 version="3.1">

	<!-- ==================== FRONTAL ==================== -->
	<!-- === Contr么leur  === -->
	<servlet>
		<servlet-name>FrontalController</servlet-name>
		<servlet-class>projet.Controller.FrontalController</servlet-class>

		<init-param>
			<param-name>defaultController</param-name>
			<param-value>/Default/</param-value>
		</init-param>

		<load-on-startup>0</load-on-startup>
	</servlet>

	<!-- === Route  === -->
	<servlet-mapping>
		<servlet-name>FrontalController</servlet-name>
		<url-pattern>/do/*</url-pattern>
	</servlet-mapping>

	<!-- ==================== DEFAULT ==================== -->
	<!-- === Contr么leur  === -->
	<servlet>
		<servlet-name>DefaultController</servlet-name>
		<servlet-class>projet.Controller.DefaultController</servlet-class>

		<init-param>
			<param-name>defaultPath</param-name>
			<param-value>accueil</param-value>
		</init-param>

		<init-param>
			<param-name>pathIndex</param-name>
			<param-value>/WEB-INF/JSP/Default/index.jsp</param-value>
		</init-param>
	</servlet>

	<!-- === Route  === -->
	<servlet-mapping>
		<servlet-name>DefaultController</servlet-name>
		<url-pattern>/Default/*</url-pattern>
	</servlet-mapping>

	<!-- ==================== ETUDIANT ==================== -->
	<!-- === Contr么leur  === -->
	<servlet>
		<servlet-name>EtudiantController</servlet-name>
		<servlet-class>projet.Controller.EtudiantController</servlet-class>

		<init-param>
			<param-name>defaultPath</param-name>
			<param-value>accueil</param-value>
		</init-param>

		<init-param>
			<param-name>pathList</param-name>
			<param-value>/WEB-INF/JSP/Etudiant/list.jsp</param-value>
		</init-param>

		<init-param>
			<param-name>pathDetails</param-name>
			<param-value>/WEB-INF/JSP/Etudiant/details.jsp</param-value>
		</init-param>

		<init-param>
			<param-name>pathListNotes</param-name>
			<param-value>/WEB-INF/JSP/Etudiant/listNotes.jsp</param-value>
		</init-param>
	</servlet>

	<!-- === Route  === -->
	<servlet-mapping>
		<servlet-name>EtudiantController</servlet-name>
		<url-pattern>/Etudiant/*</url-pattern>
	</servlet-mapping>


	<!-- ==================== GROUPE ==================== -->
	<!-- === Contr么leur  === -->
	<servlet>
		<servlet-name>GroupeController</servlet-name>
		<servlet-class>projet.Controller.GroupeController</servlet-class>

		<init-param>
			<param-name>defaultPath</param-name>
			<param-value>accueil</param-value>
		</init-param>

		<init-param>
			<param-name>pathList</param-name>
			<param-value>/WEB-INF/JSP/Groupe/list.jsp</param-value>
		</init-param>

		<init-param>
			<param-name>pathDetails</param-name>
			<param-value>/WEB-INF/JSP/Groupe/details.jsp</param-value>
		</init-param>
	</servlet>

	<!-- === Route  === -->
	<servlet-mapping>
		<servlet-name>GroupeController</servlet-name>
		<url-pattern>/Groupe/*</url-pattern>
	</servlet-mapping>

	<!-- ==================== CONTROLLER ACCESS ==================== -->
	<!-- === Filtre  === -->
	<filter>
		<filter-name>ControllerAccess</filter-name>
		<display-name>ControllerAccess</display-name>
		<filter-class>projet.Filter.ControllerAccess</filter-class>
	</filter>

	<!-- === Route  === -->
	<filter-mapping>
		<filter-name>ControllerAccess</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>